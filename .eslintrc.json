{
    "root": true,
    "extends": [
        "pipedrive/es9"
    ],
    "rules": {
        "indent": ["error", "tab", {"SwitchCase": 1}],
        "object-curly-spacing": ["error", "always"],
        "comma-dangle": ["error", "always-multiline"],
        "quotes": ["error", "single"],
        "space-before-function-paren": ["error", {
            "anonymous": "never",
            "named": "never",
            "asyncArrow": "always"
        }]
    },
    "env": {
        "es6": true,
        "jest": true,
        "node": true
    }
}